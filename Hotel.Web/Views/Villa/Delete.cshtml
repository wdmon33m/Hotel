@model Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
        </div>
    </div>


    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="col-6">
                <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" disabled class="form-control border shadom" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <textarea asp-for="Description" disabled class="form-control border shadom">
                    </textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Price" disabled class="form-control border shadom" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Sqft" disabled class="form-control border shadom" />
                    <label asp-for="Sqft" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Occupancy" disabled class="form-control border shadom" />
                    <label asp-for="Occupancy" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" disabled class="form-control border shadom" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi-trash-fill"></i> Delete
                        </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-6">
                <img src="@Model.ImageUrl" width="90%" class="ms-2 m-4"
                     style="border-radius:10px; border:1px solid #bbb9b9" />
            </div>
        </form>
    </div>
</div>